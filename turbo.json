{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*"],
      "outputs": ["dist/**"]
    },
    "release": {
      "dependsOn": ["^release"],
      "cache": false
    },
    "//#lint": {
      "dependsOn": []
    },
    "//#test": {
      "dependsOn": []
    }
  },
  "globalDependencies": ["tsconfig.json", "vite.config.ts"]
}