{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*"],
      "outputs": ["dist/**"]
    },
    "//#build": {
      "dependsOn": ["//#lint", "//#test"]
    },
    "//#lint": {
      "dependsOn": []
    },
    "//#test": {
      "dependsOn": []
    },
    "//#ci:lint": {
      "dependsOn": []
    },
    "//#ci:test": {
      "dependsOn": []
    },
    "ci:build": {
      "dependsOn": ["^build", "//#ci:lint", "//#ci:test"],
      "inputs": ["src/**/*"],
      "outputs": ["dist/**"]
    },
    "//#ci:publish": {
      "dependsOn": ["ci:build"]
    }
  },
  "globalDependencies": ["tsconfig.json", "vite.config.ts"]
}