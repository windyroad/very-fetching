{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@windyroad/*": [
          "packages/*/src"
        ]
      },
      "noEmit": true,
      "allowImportingTsExtensions": true
    },
    "include": [
      "./*.ts",
      "./*.tsx"
    ],
    "exclude": [
      "apps",
      "packages",
      "dist"
    ]  
}
  