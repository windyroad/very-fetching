{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodeNext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [],
    "jsx": "react",
    "noEmit": false,
    "downlevelIteration": true,
    "lib": [
      "esnext.string",
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.bench.ts",
    "**/node_modules",
    "**/dist",
    "**/public",
    "**/build",
    "**/coverage"
  ]
}